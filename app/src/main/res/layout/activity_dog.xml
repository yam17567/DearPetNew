<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dog3"
    tools:context=".DogActivity">

    <EditText
        android:id="@+id/Commands"
        android:layout_width="292dp"
        android:layout_height="54dp"
        android:layout_marginTop="105dp"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="entter a command"
        android:textColor="#E40924"
        android:inputType="text"
        android:textSize="22dp" />

    <Button
        android:id="@+id/AddC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Commands"
        android:layout_alignParentLeft="true"
        android:text="Add more commands" />

    <EditText
        android:id="@+id/numOfWalks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="22dp"
        android:inputType="number"
        android:layout_below="@+id/AddC"
        android:layout_alignParentLeft="true"
        android:hint="how many walks in a day?"/>

    <EditText
        android:id="@+id/numOfWalkers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="22dp"
        android:layout_alignParentLeft="true"
        android:inputType="number"
        android:layout_below="@id/numOfWalks"
        android:hint="how many walkers?" />

    <Button
        android:id="@+id/buttonToContinue"
        android:layout_width="wrap_content"
        android:layout_below="@+id/EatsFoodInDay"
        android:text="click to continue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/EatsFoodInDay"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numOfWalkers"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="how many times a day given food?"
        android:inputType="number"
        android:textSize="22dp" />


</RelativeLayout>