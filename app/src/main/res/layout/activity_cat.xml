<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cat1"
    tools:context=".CatActivity">

    <EditText
        android:id="@+id/NumOfDayCleaning"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qus1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="enter here"
        android:inputType="number"
        android:textSize="23dp" />


    <TextView
        android:id="@+id/qus22"
        android:layout_width="wrap_content"
        android:textColor="#FCF6F6"
        android:layout_marginTop="300dp"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:text="how many times eats in a day?"
        />

    <EditText
        android:id="@+id/EatsFoodInDay"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NumOfDayCleaning"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="enter here"
        android:inputType="number" />
    <TextView
        android:id="@+id/qus1"
        android:textColor="#FCF6F6"
        android:layout_width="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:text="how many times a day you clean his sandbox?" />

    <EditText
        android:id="@+id/NailsRemider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="enter yes/no"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/qus33"
        />

    <TextView
        android:id="@+id/qus33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FCF6F6"
        android:textSize="23dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EatsFoodInDay"
        android:text="are you cutting his nails and would like to be notified to? (write yes/no)" />

    <Button
        android:id="@+id/ContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NailsRemider"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:text="Click here to Continue" />


</RelativeLayout>