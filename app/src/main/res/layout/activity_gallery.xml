<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".Gallery">



    <TextView
        android:id="@+id/headLineGallery"
        android:layout_centerHorizontal="true"
        android:text="wellcom to the Gallery!"
        android:textSize="50sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/Image_View"
        android:saveEnabled="true"
        android:layout_marginTop="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_black_24dp"
        android:layout_width="400dp"
        android:layout_height="400dp" />

    <Button
        android:id="@+id/camraBtn"
        android:clickable="true"
        android:background="@drawable/ic_linked_camera_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/choose_image_btn"/>


    <Button
        android:id="@+id/choose_image_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="choose image from gallery"
        android:layout_below="@+id/Image_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>